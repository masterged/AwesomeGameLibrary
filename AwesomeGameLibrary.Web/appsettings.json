{
  "HealthChecksUI": {
    "EvaluationTimeinSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "throwConfigExceptions": true,
    "internalLogLevel": "Info",
    "internalLogFile": "${basedir}/logs/internal-nlog.txt",
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      },
      {
        "assembly": "NLog.Web.AspNetCore"
      },
      {
        "assembly": "NLog.Targets.Syslog"
      }
    ],
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "layout": "${level:uppercase=true}|${event-properties:item=logObject}",
        "fileName": "${basedir}/logs/nlog-${shortdate}.log"
      },
      "network":{
        "type": "Network",
        "layout": "${hostname}|${longdate}|${level:uppercase=true}|${event-properties:item=logObject:objectpath=EventType}",
        "address":"udp://127.0.0.1:514"
      },
      "syslog": {
        "type": "Syslog",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}:path=Severity}",
        "messageCreation": {
          "facility": "Local4",
          "rfc5424":{
            "hostname":"${hostname}"
          }
        },
        "messageSend": {
          "protocol": "udp",
          "udp": {
            "server": "127.0.0.1",
            "port": "514"
          }
        }
      },
      "auditFile": {
        "type": "File",
        "fileName": "{basedir}/logs/audit-nlog-${shortdate}.log"
      }
    },
    "rules": [
      {
        "logger": "Audit",
        "minLevel": "Debug",
        "writeTo": "auditFile"
      },
      {
        "logger": "Audit",
        "minLevel": "Debug",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}
